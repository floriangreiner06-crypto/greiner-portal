    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript -->
    <script>
        // ========================================================================
        // GLOBAL VARIABLES & CONFIG
        // ========================================================================
        
        let charts = {
            umsatz: null,
            kategorie: null,
            saldo: null
        };
        
        const API_BASE = '/api/bankenspiegel';
        
        // ========================================================================
        // INITIALIZATION
        // ========================================================================
        
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üöÄ Bankenspiegel 2.0 initialisiert');
            
            // Initial load
            loadDashboard();
            loadKonten();
            loadRecentTransactions();
            loadTopKategorien();
            
            // Tab change events
            document.querySelectorAll('button[data-bs-toggle="tab"]').forEach(tab => {
                tab.addEventListener('shown.bs.tab', function(e) {
                    const target = e.target.getAttribute('data-bs-target');
                    
                    if (target === '#transaktionen') {
                        loadTransaktionen();
                    } else if (target === '#charts') {
                        loadCharts();
                    }
                });
            });
            
            // Auto-refresh Dashboard alle 5 Minuten
            setInterval(loadDashboard, 300000);
        });
        
        // ========================================================================
        // HELPER FUNCTIONS
        // ========================================================================
        
        function showLoading() {
            document.querySelector('.loading-spinner').style.display = 'block';
        }
        
        function hideLoading() {
            document.querySelector('.loading-spinner').style.display = 'none';
        }
        
        function formatCurrency(amount) {
            return new Intl.NumberFormat('de-DE', {
                style: 'currency',
                currency: 'EUR'
            }).format(amount);
        }
        
        function formatDate(dateStr) {
            if (!dateStr) return '-';
            const date = new Date(dateStr);
            return date.toLocaleDateString('de-DE');
        }
        
        async function fetchAPI(endpoint) {
            try {
                const response = await fetch(`${API_BASE}${endpoint}`);
                const data = await response.json();
                
                if (!data.success) {
                    throw new Error(data.error || 'API Fehler');
                }
                
                return data.data;
            } catch (error) {
                console.error('API Fehler:', error);
                alert('Fehler beim Laden der Daten: ' + error.message);
                return null;
            }
        }
        
        // ========================================================================
        // DASHBOARD
        // ========================================================================
        
        async function loadDashboard() {
            loadStellantisData();
            const data = await fetchAPI('/dashboard');
            if (!data) return;
            
            document.getElementById('stat-gesamtsaldo').textContent = formatCurrency(data.gesamtsaldo);
            document.getElementById('stat-konten').textContent = data.anzahl_konten;
            document.getElementById('stat-banken').textContent = `${data.anzahl_banken} Banken`;
            document.getElementById('stat-einnahmen').textContent = formatCurrency(data.einnahmen_monat);
            document.getElementById('stat-ausgaben').textContent = formatCurrency(data.ausgaben_monat);
        }
        
        // ========================================================================
        // KONTEN
        // ========================================================================
        
        async function loadKonten() {
            showLoading();
            const konten = await fetchAPI('/konten');
            hideLoading();
            
            if (!konten) return;
            
            const tbody = document.querySelector('#konten-table tbody');
            tbody.innerHTML = '';
            
            konten.forEach(konto => {
                const row = `
                    <tr>
                        <td>${konto.bank_name}</td>
                        <td>${konto.kontoname || '-'}</td>
                        <td><small class="text-muted">${konto.iban || '-'}</small></td>
                        <td><span class="badge bg-info">${konto.kontotyp || '-'}</span></td>
                        <td class="text-end ${konto.saldo >= 0 ? 'positive-amount' : 'negative-amount'}">
                            ${formatCurrency(konto.saldo)}
                        </td>
                        <td><small class="text-muted">${formatDate(konto.stand_datum)}</small></td>
                        <td>
                            <span class="badge ${konto.aktiv ? 'bg-success' : 'bg-secondary'}">
                                ${konto.aktiv ? 'Aktiv' : 'Inaktiv'}
                            </span>
                        </td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });
        }
        
        function refreshKonten() {
            loadKonten();
        }
        
        // ========================================================================
        // TRANSAKTIONEN
        // ========================================================================
        
        async function loadTransaktionen() {
            showLoading();
            
            const vonDatum = document.getElementById('filter-von-datum').value;
            const bisDatum = document.getElementById('filter-bis-datum').value;
            
            let url = '/transaktionen?limit=200';
            if (vonDatum) url += `&von=${vonDatum}`;
            if (bisDatum) url += `&bis=${bisDatum}`;
            
            const transaktionen = await fetchAPI(url);
            hideLoading();
            
            if (!transaktionen) return;
            
            renderTransaktionen(transaktionen);
        }
        
        async function loadRecentTransactions() {
            const transaktionen = await fetchAPI('/transaktionen?limit=10');
            if (!transaktionen) return;
            
            const tbody = document.querySelector('#recent-transactions-table tbody');
            tbody.innerHTML = '';
            
            transaktionen.forEach(t => {
                const row = `
                    <tr>
                        <td><small>${formatDate(t.buchungsdatum)}</small></td>
                        <td>
                            <small class="text-muted">${t.bank_name}</small><br>
                            <strong>${t.kontoname}</strong>
                        </td>
                        <td>
                            ${t.buchungstext}<br>
                            <small class="text-muted">${t.verwendungszweck || ''}</small>
                        </td>
                        <td class="text-end ${t.betrag >= 0 ? 'positive-amount' : 'negative-amount'}">
                            ${formatCurrency(t.betrag)}
                        </td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });
        }
        
        function renderTransaktionen(transaktionen) {
            const tbody = document.querySelector('#transaktionen-table tbody');
            tbody.innerHTML = '';
            
            transaktionen.forEach(t => {
                const row = `
                    <tr>
                        <td><small>${formatDate(t.buchungsdatum)}</small></td>
                        <td><small>${formatDate(t.valutadatum)}</small></td>
                        <td>
                            <small class="text-muted">${t.bank_name}</small><br>
                            <small>${t.kontoname}</small>
                        </td>
                        <td>${t.buchungstext}</td>
                        <td><small class="text-muted">${t.verwendungszweck || '-'}</small></td>
                        <td>
                            ${t.kategorie ? `<span class="badge bg-secondary">${t.kategorie}</span>` : '-'}
                        </td>
                        <td class="text-end ${t.betrag >= 0 ? 'positive-amount' : 'negative-amount'}">
                            ${formatCurrency(t.betrag)}
                        </td>
                    </tr>
                `;
                tbody.innerHTML += row;
            });
        }
        
        function filterTransaktionen() {
            loadTransaktionen();
        }
        
        // ========================================================================
        // KATEGORIEN
        // ========================================================================
        
        async function loadTopKategorien() {
            const kategorien = await fetchAPI('/kategorien');
            if (!kategorien) return;
            
            const container = document.getElementById('top-kategorien-list');
            container.innerHTML = '';
            
            // Top 5
            kategorien.slice(0, 5).forEach((k, index) => {
                const item = `
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <strong>${k.kategorie}</strong><br>
                            <small class="text-muted">${k.anzahl} Transaktionen</small>
                        </div>
                        <div class="text-end">
                            <strong class="text-danger">${formatCurrency(k.summe)}</strong>
                        </div>
                    </div>
                    ${index < 4 ? '<hr>' : ''}
                `;
                container.innerHTML += item;
            });
        }
        
        // ========================================================================
        // CHARTS
        // ========================================================================
        
        async function loadCharts() {
            await loadUmsatzChart();
            await loadKategorieChart();
            await loadSaldoChart();
        }
        
        async function loadUmsatzChart() {
            const data = await fetchAPI('/umsaetze_monatlich?monate=12');
            if (!data) return;
            
            const labels = data.map(d => {
                const [year, month] = d.monat.split('-');
                return new Date(year, month - 1).toLocaleDateString('de-DE', { month: 'short', year: '2-digit' });
            });
            
            const ctx = document.getElementById('umsatz-chart').getContext('2d');
            
            if (charts.umsatz) {
                charts.umsatz.destroy();
            }
            
            charts.umsatz = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Einnahmen',
                            data: data.map(d => d.einnahmen),
                            backgroundColor: 'rgba(25, 135, 84, 0.7)',
                            borderColor: 'rgba(25, 135, 84, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Ausgaben',
                            data: data.map(d => d.ausgaben),
                            backgroundColor: 'rgba(220, 53, 69, 0.7)',
                            borderColor: 'rgba(220, 53, 69, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return formatCurrency(value);
                                }
                            }
                        }
                    }
                }
            });
        }
        
        async function loadKategorieChart() {
            const data = await fetchAPI('/kategorien');
            if (!data) return;
            
            const top5 = data.slice(0, 5);
            
            const ctx = document.getElementById('kategorie-chart').getContext('2d');
            
            if (charts.kategorie) {
                charts.kategorie.destroy();
            }
            
            charts.kategorie = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: top5.map(d => d.kategorie),
                    datasets: [{
                        data: top5.map(d => d.summe),
                        backgroundColor: [
                            'rgba(220, 53, 69, 0.7)',
                            'rgba(255, 193, 7, 0.7)',
                            'rgba(13, 202, 240, 0.7)',
                            'rgba(102, 126, 234, 0.7)',
                            'rgba(108, 117, 125, 0.7)'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right'
                        }
                    }
                }
            });
        }
        
        async function loadSaldoChart() {
            const data = await fetchAPI('/saldo_entwicklung?tage=90');
            if (!data) return;
            
            const ctx = document.getElementById('saldo-chart').getContext('2d');
            
            if (charts.saldo) {
                charts.saldo.destroy();
            }
            
            charts.saldo = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.map(d => formatDate(d.datum)),
                    datasets: [{
                        label: 'Gesamtsaldo',
                        data: data.map(d => d.saldo),
                        borderColor: 'rgba(13, 110, 253, 1)',
                        backgroundColor: 'rgba(13, 110, 253, 0.1)',
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            ticks: {
                                callback: function(value) {
                                    return formatCurrency(value);
                                }
                            }
                        }
                    }
                }
            });
        }

        // =================================================================
        // STELLANTIS FAHRZEUGFINANZIERUNGEN
        // =================================================================
        
        function loadStellantisData() {
            fetch('/api/bankenspiegel/fahrzeugfinanzierungen')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        displayStellantisData(data.data);
                    } else {
                        showStellantisError();
                    }
                })
                .catch(error => {
                    console.error('Stellantis Fehler:', error);
                    showStellantisError();
                });
        }
        
        function displayStellantisData(data) {
            document.getElementById('stellantis-loading').style.display = 'none';
            document.getElementById('stellantis-content').style.display = 'block';
            
            const gesamt = data.gesamt || {};
            document.getElementById('stellantis-fahrzeuge').textContent = 
                (gesamt.anzahl_fahrzeuge || 0).toLocaleString('de-DE');
            document.getElementById('stellantis-saldo').textContent = 
                formatEuro(gesamt.gesamt_saldo || 0);
            
            // RRDI Details
            const rrdiContainer = document.getElementById('stellantis-rrdi');
            rrdiContainer.innerHTML = '';
            
            if (data.nach_rrdi && data.nach_rrdi.length > 0) {
                data.nach_rrdi.forEach(rrdi => {
                    const prozent = rrdi.original > 0 
                        ? ((rrdi.abbezahlt / rrdi.original) * 100).toFixed(1)
                        : 0;
                    
                    rrdiContainer.innerHTML += `
                        <div class="d-inline-block me-3 mb-1">
                            <span class="badge bg-warning text-dark">${rrdi.rrdi}</span>
                            <strong>${rrdi.anzahl}</strong> Fzg. | 
                            ${formatEuro(rrdi.saldo)} 
                            <small class="text-muted">(${prozent}% getilgt)</small>
                        </div>
                    `;
                });
            }
            
            // Alerts
            if (data.alerts && data.alerts.length > 0) {
                document.getElementById('stellantis-alerts').style.display = 'block';
                const alertsContent = document.getElementById('stellantis-alerts-content');
                alertsContent.innerHTML = '<div class="row small">';
                
                data.alerts.forEach(alert => {
                    alertsContent.innerHTML += `
                        <div class="col-md-6 mb-1">
                            <strong>${alert.rrdi}</strong> - VIN ${alert.vin}: 
                            <span class="text-danger">${alert.tage_bis_zinsen} Tage</span>
                            (${formatEuro(alert.aktueller_saldo)})
                        </div>
                    `;
                });
                
                alertsContent.innerHTML += '</div>';
            }
        }
        
        function showStellantisError() {
            document.getElementById('stellantis-loading').style.display = 'none';
            document.getElementById('stellantis-error').style.display = 'block';
        }
        
        function formatEuro(value) {
            return new Intl.NumberFormat('de-DE', {
                style: 'currency',
                currency: 'EUR',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(value);
        }


    </script>
</body>
</html>
