                        cell_texts = [c.text.strip()[:20] for c in cells[:10]]
                        print(f"   DEBUG Row {idx}: {' | '.join(cell_texts)}")

                    # Spalten-Mapping - VIN sollte in den ersten Spalten sein
                    # M√ºssen wir anhand der Header anpassen
                    vertrag = {
                        'vin': '',
                        'finanzierungsnummer': '',
                        'modell': '',
                        'produkt': '',
                        'finanz_betrag': 0.0,
                        'rechnungsdatum': '',
