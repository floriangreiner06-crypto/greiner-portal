            print(f"‚ùå Navigation fehlgeschlagen: {e}")
            return False

    def analyze_filters(self) -> Dict:
        """Analysiert verf√ºgbare Filter auf Bestandsliste"""
        print("üîç ANALYSIERE FILTER...")
        
        # DETAILSUCHE √∂ffnen falls vorhanden
        try:
            buttons = self.driver.find_elements(By.TAG_NAME, "button")
            for btn in buttons:
                if "detail" in btn.text.lower():
                    print("   ‚Üí √ñffne Detailsuche...")
                    self.driver.execute_script("arguments[0].click();", btn)
                    time.sleep(3)
                    self._screenshot("05a_detailsuche_geoeffnet")
                    break
        except:
            pass
        
        filters = {
            'text_inputs': [],
            'select_dropdowns': [],
            'date_inputs': [],
            'checkboxes': [],
            'buttons': []
        }
        
        try:
            # TEXT INPUTS mit Labels
            text_inputs = self.driver.find_elements(By.CSS_SELECTOR, "input[type='text'], input:not([type])")
            for inp in text_inputs:
                if inp.is_displayed():
                    # Versuche Label zu finden (Angular Material hat mat-label)
                    label = ""
                    try:
                        parent = inp.find_element(By.XPATH, "./ancestor::mat-form-field[1]")
                        label_elem = parent.find_element(By.CSS_SELECTOR, "mat-label, label")
                        label = label_elem.text.strip()
                    except:
                        pass
                    
                    filters['text_inputs'].append({
                        'id': inp.get_attribute('id'),
                        'name': inp.get_attribute('name'),
                        'placeholder': inp.get_attribute('placeholder'),
                        'label': label
                    })
            
            # SELECT DROPDOWNS
            selects = self.driver.find_elements(By.TAG_NAME, "select")
            for sel in selects:
                if sel.is_displayed():
                    options = sel.find_elements(By.TAG_NAME, "option")
                    filters['select_dropdowns'].append({
                        'id': sel.get_attribute('id'),
                        'name': sel.get_attribute('name'),
                        'options': [opt.text for opt in options]
                    })
            
            # DATE INPUTS
            date_inputs = self.driver.find_elements(By.CSS_SELECTOR, "input[type='date']")
            for inp in date_inputs:
                if inp.is_displayed():
                    filters['date_inputs'].append({
                        'id': inp.get_attribute('id'),
                        'name': inp.get_attribute('name')
                    })
            
            # CHECKBOXES mit Labels
            checkboxes = self.driver.find_elements(By.CSS_SELECTOR, "input[type='checkbox']")
            for cb in checkboxes:
                if cb.is_displayed():
                    # Versuche Label zu finden
                    label = ""
                    try:
                        parent = cb.find_element(By.XPATH, "./ancestor::mat-checkbox[1]")
                        label = parent.text.strip()
                    except:
                        try:
                            label_elem = cb.find_element(By.XPATH, "./following-sibling::label[1]")
                            label = label_elem.text.strip()
                        except:
                            pass
                    
                    filters['checkboxes'].append({
                        'id': cb.get_attribute('id'),
                        'name': cb.get_attribute('name'),
                        'checked': cb.is_selected(),
                        'label': label
                    })
            
            # BUTTONS
            buttons = self.driver.find_elements(By.TAG_NAME, "button")
            for btn in buttons:
                text = btn.text.strip()
                if text and btn.is_displayed():
                    filters['buttons'].append({
                        'text': text,
                        'type': btn.get_attribute('type')
                    })
            
            # Ausgabe
            print(f"\n   üìù Text Inputs: {len(filters['text_inputs'])}")
            for inp in filters['text_inputs']:
                label_info = f"Label: '{inp.get('label', '')}'" if inp.get('label') else "Kein Label"
                print(f"      - ID: {inp['id']}, {label_info}, Placeholder: {inp['placeholder']}")
            
            print(f"\n   üìã Dropdowns: {len(filters['select_dropdowns'])}")
            for sel in filters['select_dropdowns']:
                print(f"      - ID: {sel['id']}, Name: {sel['name']}")
                print(f"        Optionen: {', '.join(sel['options'][:5])}...")
            
            print(f"\n   üìÖ Date Inputs: {len(filters['date_inputs'])}")
            for inp in filters['date_inputs']:
                print(f"      - ID: {inp['id']}, Name: {inp['name']}")
            
            print(f"\n   ‚òëÔ∏è  Checkboxes: {len(filters['checkboxes'])}")
            for cb in filters['checkboxes']:
                label_info = f"Label: '{cb.get('label', '')}'" if cb.get('label') else "Kein Label"
                print(f"      - ID: {cb['id']}, {label_info}, Checked: {cb['checked']}")
            
            print(f"\n   üîò Buttons: {len(filters['buttons'])}")
            for btn in filters['buttons']:
                print(f"      - Text: '{btn['text']}'")
            
            # HTML + JSON speichern
            html_file = os.path.join(SCREENSHOTS_DIR, "bestandsliste_page.html")
            with open(html_file, 'w', encoding='utf-8') as f:
                f.write(self.driver.page_source)
            print(f"\n   üíæ HTML gespeichert: {html_file}")
            
            json_file = os.path.join(SCREENSHOTS_DIR, "filter_analysis.json")
            with open(json_file, 'w', encoding='utf-8') as f:
                json.dump(filters, f, indent=2, ensure_ascii=False)
            print(f"   üíæ JSON gespeichert: {json_file}")
            
            self._screenshot("05_filter_analyse")
            
            print("‚úÖ Filter-Analyse abgeschlossen\n")
            return filters
            
        except Exception as e:
            print(f"   ‚ùå Filter-Analyse fehlgeschlagen: {e}")
            import traceback
            traceback.print_exc()
            return filters

def scrape_bestandsliste(self) -> List[Dict]:
        """Scraped die Bestandsliste-Tabelle"""
        print("üìä Scrape Bestandsliste...")

        vertraege = []

        try:
            time.sleep(3)

            # FILTER SETZEN: Breites Rechnungsdatum f√ºr alle Fahrzeuge
            print("   ‚Üí Setze Filter (Rechnungsdatum)...")
            try:
                # Datum: Letztes Jahr bis heute
                heute = datetime.now()
                vor_2_jahren = datetime(heute.year - 2, 1, 1)  # 01.01.2023
                
                # Finde "Rechnungsdatum Von" (mat-date-range-input-0)
                date_from = self.driver.find_element(By.ID, "mat-date-range-input-0")
                date_from.clear()
                date_from.send_keys(vor_2_jahren.strftime("%d.%m.%Y"))
                time.sleep(1)
                
                # Finde "Rechnungsdatum Bis" - n√§chstes input nach mat-date-range-input-0
                parent = date_from.find_element(By.XPATH, "./ancestor::mat-form-field[1]")
                date_to_inputs = parent.find_elements(By.CSS_SELECTOR, "input")
                if len(date_to_inputs) > 1:
                    date_to_inputs[1].clear()
                    date_to_inputs[1].send_keys(heute.strftime("%d.%m.%Y"))
                    time.sleep(1)
                
                print(f"      ‚úì Rechnungsdatum: {vor_2_jahren.strftime('%d.%m.%Y')} - {heute.strftime('%d.%m.%Y')}")
                
                self._screenshot("06_filter_gesetzt")
                
            except Exception as e:
                print(f"      ‚ö†Ô∏è  Filter setzen fehlgeschlagen: {e}")
                import traceback
                traceback.print_exc()

            # SUCHEN-Button klicken
            time.sleep(2)
            buttons = self.driver.find_elements(By.TAG_NAME, "button")
            search_buttons = [b for b in buttons if b.text.strip() == "Suchen"]

            if search_buttons:
                print(f"   ‚Üí Klicke 'Suchen'...")
                self.driver.execute_script("arguments[0].click();", search_buttons[0])
                time.sleep(8)
                self._screenshot("07_nach_suche")

            # Finde Tabelle
            tables = self.driver.find_elements(By.TAG_NAME, "table")

            if not tables:
                raise Exception("Keine Tabelle gefunden")

            rows = tables[0].find_elements(By.TAG_NAME, "tr")
            print(f"   ‚Üí {len(rows)} Zeilen gefunden (inkl. Header)")

            # Analysiere Header
            headers = tables[0].find_elements(By.TAG_NAME, "th")
            header_text = [h.text.strip() for h in headers]
            print(f"   ‚Üí Spalten: {', '.join(header_text[:8])}...")

            # Scrape Daten (√ºberspringe Header-Zeile)
            for idx, row in enumerate(rows[1:], 1):
                try:
                    cells = row.find_elements(By.TAG_NAME, "td")

                    if len(cells) < 3:
                        continue

                    # Ausgabe erste 3 Zeilen f√ºr Debugging
